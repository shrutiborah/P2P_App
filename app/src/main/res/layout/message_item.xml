<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_marginEnd="70dp"
        android:layout_marginStart="5dp"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="@color/teal_200"
        android:id="@+id/receive_card_view"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/receive_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:paddingTop="3dp"
                android:paddingEnd="5dp"
                android:paddingBottom="3dp"
                android:text="received message item"
                app:layout_constraintBottom_toTopOf="@+id/received_attachment_layout" />

            <RelativeLayout
                android:id="@+id/received_attachment_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:paddingTop="3dp"
                android:paddingEnd="5dp"
                android:paddingBottom="3dp"
                app:layout_constraintBottom_toTopOf="@+id/received_date_time_text_view"
                >

                <ImageView
                    android:id="@+id/received_attachment_image_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="30dp"
                    android:paddingStart="5dp"
                    android:paddingTop="3dp"
                    android:paddingEnd="5dp"
                    android:paddingBottom="3dp"
                    android:background="@color/teal_700"
                    android:src="@drawable/ic_baseline_attachment_24"
                    />

                <TextView
                    android:id="@+id/received_attachment_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/received_attachment_image_view"
                    android:layout_centerHorizontal="true"
                    android:paddingStart="5dp"
                    android:paddingTop="3dp"
                    android:paddingEnd="5dp"
                    android:paddingBottom="3dp"
                    android:textSize="10dp"
                    android:text="Attachment Title" />

            </RelativeLayout>

            <TextView
                android:id="@+id/received_date_time_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="3dp"
                android:text="2022-02-21T16:06:26.302360Z"
                android:textColor="#808080"
                android:textSize="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="70dp"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="@color/yellow"
        android:id="@+id/send_card_view"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/send_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:text="message item"
                app:layout_constraintBottom_toTopOf="@+id/sent_attachment_relative_layout"/>

            <RelativeLayout
                android:id="@+id/sent_attachment_relative_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="30dp"
                android:paddingStart="5dp"
                android:paddingTop="3dp"
                android:paddingEnd="5dp"
                android:paddingBottom="3dp"
                app:layout_constraintBottom_toTopOf="@+id/send_date_time_text_view"

                >

                <ImageView
                    android:id="@+id/sent_attachment_image_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="30dp"
                    android:paddingStart="5dp"
                    android:paddingTop="3dp"
                    android:paddingEnd="5dp"
                    android:paddingBottom="3dp"
                    android:background="#e0a73d"
                    android:src="@drawable/ic_baseline_attachment_24"
                    />

                <TextView
                    android:id="@+id/send_attachment_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/sent_attachment_image_view"
                    android:layout_centerHorizontal="true"
                    android:paddingStart="5dp"
                    android:paddingTop="3dp"
                    android:paddingEnd="5dp"
                    android:paddingBottom="3dp"
                    android:textSize="10dp"
                    android:text="Attachment Title" />

            </RelativeLayout>

            <TextView
                android:id="@+id/send_date_time_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="3dp"
                android:text="2022-02-21T16:06:26.302360Z"
                android:textColor="#808080"
                android:textSize="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>